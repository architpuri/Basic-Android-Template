<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.themoneytree">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.CALL_PHONE"
        android:requiredFeature="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_money"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_money"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.splash.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.login.LoginActivity" />
        <activity android:name=".ui.registration.RegistrationActivity" />
        <activity android:name=".ui.home.HomeActivity"/>
        <activity android:name=".ui.riskprofile.GeneralRiskAnalyzerActivity"/>
        <activity android:name=".ui.aboutus.AboutUsActivity"/>
        <activity android:name=".ui.expenditure.ExpenditureActivity"/>
        <activity android:name=".ui.tax.TaxActivity"/>
        <activity android:name=".ui.portfolio.PortfolioActivity"/>
        <activity android:name=".ui.stocks.StocksActivity"/>
        <activity android:name=".ui.privacypolicy.PrivacyPolicyActivity"/>
        <activity android:name=".utils.upload.ImageActivity"/>
        <activity android:name=".utils.upload.PdfActivity"/>
        <activity android:name=".utils.upload.VideoActivity"/>
        <activity android:name=".ui.login.ForgotActivity"/>
        <activity android:name=".ui.instruments.InstrumentActivity"/>
        <activity android:name=".ui.editinstrument.EditInstrumentActivity"/>
        <activity android:name=".ui.retirement.RetirementActivity"/>
        <activity android:name=".ui.riskprofile.risk.RiskAnalysisActivity"/>
        <activity android:name=".ui.riskprofile.time.TimeAnalysisActivity"/>
    </application>

</manifest>