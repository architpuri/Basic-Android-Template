<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/root_dialogModify" xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_edit_dialogModify"
        android:padding="@dimen/padd_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:gravity="center"
        android:textSize="@dimen/textSize_20"
        android:textColor="@color/colorBlueGrey"
        android:layout_margin="@dimen/margin_10"
        android:background="@drawable/btn_outline_rectangle" />

    <TextView
        android:id="@+id/txt_delete_dialogModify"
        android:padding="@dimen/padd_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:gravity="center"
        android:textColor="@color/colorRed"
        android:textSize="@dimen/textSize_20"
        android:layout_margin="@dimen/margin_10"
        android:background="@drawable/btn_outline_rectangle" />

</LinearLayout>