<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padd_10">
    <TextView
        android:id="@+id/txt_name_itemInvestment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSize_20"
        android:text="Investment Name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/guide_left_itemInvestment"/>


    <TextView
        android:id="@+id/txt_amount_itemInvestment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSize_20"
        android:drawableLeft="@drawable/ic_rupee_indian"
        android:text="5000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guide_right_itemInvestment"/>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_left_itemInvestment"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_right_itemInvestment"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>