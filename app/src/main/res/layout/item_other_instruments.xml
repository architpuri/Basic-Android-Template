<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/margin_10"
    android:background="@drawable/btn_outline_rectangle"
    android:padding="@dimen/padd_10">

    <TextView
        android:id="@+id/txt_instrumentName_itemOtherInstruments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shop Partnership"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/textSize_25"
        android:ems="6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guide_itemOtherInstruments_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/txt_investmentAmount_itemOtherInstruments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50000"
        android:drawableLeft="@drawable/ic_rupee_indian"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/textSize_25"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guide_itemOtherInstruments_right"
        app:layout_constraintStart_toEndOf="@id/guide_itemOtherInstruments_left"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_investmentGrowth_itemOtherInstruments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4.5%"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/textSize_25"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guide_itemOtherInstruments_right"
        app:layout_constraintTop_toTopOf="parent" />


    <android.support.constraint.Guideline
        android:id="@+id/guide_itemOtherInstruments_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />
    <android.support.constraint.Guideline
        android:id="@+id/guide_itemOtherInstruments_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85" />

</android.support.constraint.ConstraintLayout>