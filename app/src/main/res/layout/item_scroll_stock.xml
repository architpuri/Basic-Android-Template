<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:layout_height="wrap_content"
    android:background="@drawable/shadow_scroll_stock">

    <ImageView
        android:id="@+id/img_trend_scrollStock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/ic_arrow_drop_up_green_24dp"/>


    <TextView
        android:id="@+id/txt_currentPrice_scrollStock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:layout_marginLeft="@dimen/margin_5"
        android:layout_toRightOf="@id/img_trend_scrollStock"
        android:layout_toEndOf="@id/img_trend_scrollStock" />

    <TextView
        android:id="@+id/txt_stockName_scrollStock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/margin_5"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/txt_currentPrice_scrollStock"
        android:layout_toEndOf="@id/txt_currentPrice_scrollStock" />

    <TextView
        android:id="@+id/txt_change_scrollStock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.00%"
        android:layout_marginLeft="@dimen/margin_5"
        android:layout_toRightOf="@id/txt_stockName_scrollStock"
        app:layout_constraintTop_toTopOf="@id/txt_currentPrice_scrollStock"
        android:layout_alignBottom="@id/txt_currentPrice_scrollStock" />


</RelativeLayout>